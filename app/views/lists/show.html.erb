<%= provide(:title,"Show list #{@list.name}") %>
<div><h1>Blacklist #<%= @title %></h1></div>

<table class="table table-bordered table-hover">
  <thead>
  <tr>
    <th>#</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Points</th>
    <th>Change</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each_with_index do |list_user,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= list_user.firstname %></td>
        <td><%= list_user.lastname %></td>
        <td><%= list_user.points_on_given_list @list %></td>
        <td><%= list_user.variation_on_given_list @list %></td>
        <td>
          <div class="hidden add_point_div">
            <select>
              <% (0..current_user.available_points_on_given_list(@list)).each do |p| %>
                  <option value="<%= p %>"><%= p %></option>
              <% end %>
            </select>
            <button class="btn btn-danger valid_vote">Vote!</button>
          </div>
          <button class="btn add_point_button">+</button>

        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br />

