<div class="row center-vert col-md-offset-2 col-md-7">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{role: "form"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="row main-page-form">
        <%= f.email_field :email, :autofocus => true, :class => "col-md-11", :placeholder => "Email address" %>
      </div>
      <div class="row main-page-form">
        <%= f.password_field :password, :class => "col-md-5", :placeholder => "Password" %>
        <%= f.password_field :password_confirmation, :class => "col-md-5 col-md-offset-1", :placeholder => "Confirm password" %>
      </div>
      <div class="row main-page-form">
        <%= f.submit "Sign up", :class => "col-md-11 btn btn-info" %>
      </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
