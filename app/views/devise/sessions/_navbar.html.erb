<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "navbar-form navbar-right form-inline"}, :role=>"form") do |f| %>
    <div class="form-group">
      <label class="sr-only" for="email">Email address</label>
      <%= f.email_field :email, :autofocus => true,  :placeholder => "Enter email", :class=>"form-control", :id=>"email" %>
    </div>

    <div class="form-group">
      <label class="sr-only" for="password">Password</label>
      <%= f.password_field :password,  :placeholder => "Password", :class=>"form-control", :class=>"form-control", :id=>"password" %>
    </div>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me, {:checked=>true} %> Remember me
      </label>
    </div>

  <%= f.submit "Sign in", :class => "btn btn-default"%>
<% end %>