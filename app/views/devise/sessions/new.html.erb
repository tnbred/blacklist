<%= provide(:title, "Home") %>
<div class="row center-vert col-md-offset-4 col-md-4">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{role: "form"}, :class=>"form-horizontal") do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class="col-md-12 main-page-form">
          <%= f.email_field :email, :autofocus => true,  :placeholder => "Enter email", :class=>"form-control", :id=>"email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12 main-page-form">
          <%= f.password_field :password,  :placeholder => "Password", :class=>"form-control", :class=>"form-control", :id=>"password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me, {:checked=>true} %> Remember me
            </label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12 main-page-form">
          <%= f.submit "Log in", :class => "col-md-12 btn btn-info" %>
        </div>
      </div>

  <% end %>
</div>
