<%= provide(:title, "Home") %>
<div class="row center-vert col-md-offset-2 col-md-7">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{role: "form"}, :class=>"form-horizontal") do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group ">
        <div class="col-md-11 main-page-form">
          <%= f.email_field :email, :autofocus => true,  :placeholder => "Enter email", :class=>"form-control", :id=>"email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-5 main-page-form">
          <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
        </div>
        <div class="col-md-5 col-md-offset-1 main-page-form">
          <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-11 main-page-form">
          <%= f.submit "Sign up", :class => "col-md-12 btn btn-info" %>
        </div>
      </div>

  <% end %>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "navbar-form navbar-right form-inline"}, :role=>"form") do |f| %>
    <div class="form-group">
      <label class="sr-only" for="email">Email address</label>
      <%= f.email_field :email, :autofocus => true,  :placeholder => "Enter email", :class=>"form-control", :id=>"email" %>
    </div>

    <div class="form-group">
      <label class="sr-only" for="password">Password</label>
      <%= f.password_field :password,  :placeholder => "Password", :class=>"form-control", :class=>"form-control", :id=>"password" %>
    </div>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me, {:checked=>true} %> Remember me
      </label>
    </div>

    <%= f.submit "Sign in", :class => "btn btn-default"%>
<% end %>