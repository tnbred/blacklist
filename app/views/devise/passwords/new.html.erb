<%= provide(:title, "Home") %>
<div class="row center-vert col-md-offset-4 col-md-4">

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html=>{:method => :post, role: "form"}, :class=>"form-horizontal") do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class="col-md-12 main-page-form">
          <%= f.email_field :email, :autofocus => true,  :placeholder => "Enter email", :class=>"form-control", :id=>"email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12 main-page-form">
          <%= f.submit "Send me reset password instructions", :class => "col-md-12 btn btn-info" %>
        </div>
      </div>

  <% end %>
</div>

<%= render :partial => 'devise/shared/links' %>

