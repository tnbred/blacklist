<%= provide(:title,"Contact us") %>
<div><h1>Contact us.</h1></div>




<%= form_for(@contact, :url => contacts_path, :html => { :method => :post }) do |f| %>

    <div><%= f.label :text %><br />
      <%= f.text_area :text, :autofocus => true , :rows=>3, :class=> "form-control" %></div>

    <div><%= f.submit "Send" , :class=>"btn btn-success"%></div>
<% end %>


