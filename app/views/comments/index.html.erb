<%= provide(:title,"Gossip list #{@list.name}") %>
<div><h1><%= @list.name %> Gossip !</h1></div>

<div class="page-header">
  <%= render 'form', :comment => @comment, :list => @list %>
</div>

<% if @comments.size>0 %>
    <% @comments.each do |comment| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= comment.user.nickname %> on <%= comment.created_at.strftime("%m/%d/%Y at %I:%M%p") %> </h3>
          </div>
          <div class="panel-body">
            <%= comment.comment %>
          </div>
        </div>
    <% end %>
<% else %>
    <small>No gossip yet.</small>
<% end %>