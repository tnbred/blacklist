<%= form_for(comment, :url => comments_path(list_id: list.id), :html => { :method => :post }) do |f| %>

    <div><%= f.label :comment %><br />
      <%= f.text_area :comment, :autofocus => true , :rows=>3, :class=> "form-control" %></div>

    <div><%= f.submit "Send" , :class=>"btn btn-success"%></div>
<% end %>
