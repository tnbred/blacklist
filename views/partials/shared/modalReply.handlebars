<!-- Modal -->
<div class="modal fade" id="commentModal_{{@index}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">

        <div class="row">
            <form accept-charset="UTF-8" action="/comments/reply" method="post" role="form">
              <input type="hidden" name="reply_comment[commentId]" value={{id}}>
              <input type="hidden" name="reply_comment[userId]" value={{user.id}}>
              <div class="form-group">
                <div class="main-page-form">
                 <textarea autofocus="autofocus" class="form-control" name="reply_comment[text]" type="text" size="35" placeholder="Comment here.." ></textarea>
               </div>
             </div>

             <div class="form-group">
              <div class="col-lg-10">
                <input class="btn btn-success" name="commit" type="submit" value="Comment" />
              </div>
            </div>
          </form>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>