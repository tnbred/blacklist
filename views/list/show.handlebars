<div class="row col-md-7 col-md-offset-1 ">
  <div class="panel panel-primary blacklistToLoadLayout displayList" blacklistid={{list.id}}>
    <!-- Default panel contents -->
    <div class="panel-heading">{{list.name}}</div>
    <div class="panel-body">
      <img style="margin-left: 45%" src="/img/loader.gif">
    </div>

  </div>
</div>


<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Trash your ennemies!
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">

        <div class="row">
            <form accept-charset="UTF-8" action="/comments" method="post" role="form">
              <input type="hidden" name="comment[listId]" value={{list.id}}>
              <div class="form-group">
                <div class="main-page-form">
                 <textarea autofocus="autofocus" class="form-control" id="user_email" name="comment[text]" type="text" size="35" placeholder="Comment here.." ></textarea>
               </div>
             </div>

             <div class="form-group">
              <div class="col-lg-10">
                <input class="btn btn-success" name="commit" type="submit" value="Comment" />
              </div>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>


<div class="row col-md-4">
  
<div class="row col-lg-10 comments">
  {{#each comments}}

  <div class="col-md-12 well">
   <p>
     {{comment}}
     <br>
     <button type="button" class="btn btn-default btn-sm pull-left like-comment {{disabled}}" comment_id={{id}} button_id={{@index}} id="button_id_{{@index}}" likes={{likes}}>
        <span class="likes">{{likes}}</span> <span class="glyphicon glyphicon-heart"></span> 
      </button>
     <small class="pull-right">By {{user.nickname}}, {{formatDate}} </small></p>

<!-- Button trigger modal -->
<a class="replyToComments btn" autofocus="autofocus" data-toggle="modal" data-target="#commentModal_{{@index}}">
  Reply!
</a>

   
 </div>

   {{> shared/modalReply }} 

 {{/each}}
</div>
</div>